{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "backend/src",            // source code yaha hoga
    "outDir": "./dist",            // compiled js yaha jayega

    /* Environment */
    "module": "commonjs",          // Node.js ke liye
    "target": "ES2020",
    "lib": ["esnext"],
    "types": ["node"],             // Node.js types
    "esModuleInterop": true,       // import/export support
    "resolveJsonModule": true,     // agar json import karna ho to

    /* Output */
    "sourceMap": true,             // debugger ke liye
    "declaration": true,           // .d.ts files generate karega
    "declarationMap": true,

    /* Strictness */
    "strict": true,               
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Module Handling */
    "moduleResolution": "node",
    "isolatedModules": true,
    "verbatimModuleSyntax": false
  },
  "include": ["backend/src"],             
  "exclude": ["backend/node_modules", "dist", "tests"]
}
