{
  "compilerOptions": {
    "target": "ESNext",                        // modern JS target
    "module": "ESNext",                        // allow import.meta
    "lib": ["ESNext", "DOM"],                  // browser + modern features
    "moduleResolution": "Node",                // resolve node_modules properly
    "jsx": "react-jsx",                        // React 17+ JSX transform
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {}
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/vite-env.d.ts"                        
  ],
  "exclude": ["node_modules", "dist"]
}
